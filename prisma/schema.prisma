generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define data models here
model User {
  id String @id @unique @default(ulid())
  name String
  email String @unique
  password String
  watchlists Movie[] @relation("UserWatchList")
  reviews Review[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("users")
}

model Movie {
  id String @id @unique @default(ulid())
  title String
  description String?
  releaseDate DateTime
  director String?
  genre String?
  watchlists User[] @relation("UserWatchList")
  reviews Review[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("movies")
}

model Review {
  id String @id @unique @default(ulid())
  comment String
  rating Float
  movie Movie @relation(fields: [movieId], references: [id])
  movieId String
  user User @relation(fields: [userId], references: [id])
  userId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("reviews")
}